alias df='df -h'    # Human-readable
alias du='du -ch'   # Human-readable; total

########
### ls Shortcuts
############

alias ls='ls -hA --color'   # Baseline
alias ll='ls -l'            # Long-list
alias lr='ls -R'            # Recursive
alias lx='ls -BX'           # Sort by Extension; omit backups
alias lz='ls -S'            # Sort by Size
alias lt='ls -t'            # Sort by MTime
alias llr='ls -lR'          # Long Recursive
alias llx='ls -lBX'         # Long Sort by Extension
alias llz='ls -lS'          # Long Sort by Size
alias llt='ls -lt'          # Long Sort by MTime
alias lss='ls | less'
alias lls='ll | less'

