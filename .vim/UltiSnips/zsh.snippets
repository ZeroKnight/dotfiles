priority -50

extends sh

priority -49

snippet #! "shebang" b
`!p snip.rv = "#!/bin/" + snip.ft`

$0
endsnippet

snippet #!e "#!/usr/bin/env" b
`!p snip.rv = "#!/usr/bin/env" + snip.ft`

$0
endsnippet

snippet forz "for i (words) { ... }"
for ${1:i} (${2:words}) {
	$0
}
endsnippet

snippet case "case ... esac"
case ${1:word} in
	(${2:pattern})
		$0
		;;
esac
endsnippet

snippet casep "case pattern"
(${1:pattern})
	$0
	;;
endsnippet

# vim: ft=snippets
